    "grid_system": {
      "dashboard": "grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6",
      "landing": "grid grid-cols-1 md:grid-cols-12 gap-8"
    },
    "border_radius": {
      "default": "rounded-sm",
      "card": "rounded-md",
      "button": "rounded-sm"
    }
  },
  "components": {
    "buttons": {
      "style": "sharp edges, high contrast",
      "hover": "transform -translate-y-0.5 transition-all duration-200"
    },
    "cards": {
      "style": "flat background #0A0A0A, 1px border #27272A",
      "hover": "border-primary/50 shadow-[0_0_30px_-10px_rgba(124,58,237,0.3)] transition-all duration-300"
    },
    "inputs": {
      "style": "bg-secondary/50 border-transparent focus:border-primary focus:ring-1 focus:ring-primary/50 transition-all"
    },
    "charts": {
      "library": "recharts",
      "style": "minimalist, thin lines, gradient fills with low opacity"
    }
  },
  "visual_enhancers": {
    "glassmorphism": "backdrop-blur-xl bg-black/40 border border-white/10",
    "tracing_beam": "Use framer-motion to animate borders on active cards",
    "noise_texture": "opacity-5 pointer-events-none fixed inset-0 z-50 mix-blend-overlay",
    "glow_effects": "Use shadow-lg shadow-primary/20 for primary actions"
